{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm start",
    "devPath": "http://localhost:1200",
    "distDir": "../dist/stats-guru"
  },
  "package": {
    "productName": "Stats Guru",
    "version": "1.1.6"
  },
  "tauri": {
    "allowlist": {
      "all": false,
			"shell": {
				"all": false,
				"execute": false,
				"open": true,
				"scope": [],
				"sidecar": false
			},
			"window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
				"setDecorations": true
      },
			"os": {
				"all": true
			},
			"path": {
				"all": true
			}
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/statsguru32x32.png",
        "icons/statsguru128x128.png",
        "icons/statsguru256x256.png",
        "icons/statsguru.icns",
        "icons/statsguru.ico"
      ],
      "identifier": "com.tanagerproductions.statsguru",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.thegrindsession.com/Releases/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQ3RDEwQUU4RUU3MzU0MDAKUldRQVZIUHU2QXJSMS82a2lHNCtRb212bEd5RGhrZUF4ZmsxeDJTWWtKY1B1WkhZNk9YQ0RxOWQK"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "resizable": true,
        "title": "Stats Guru",
        "width": 1200,
				"decorations": true,
				"hiddenTitle": true,
				"titleBarStyle": "Overlay"
      }
    ]
  }
}
